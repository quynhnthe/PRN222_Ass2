@model NewsManagementSystem_Assigment01.ViewModel.NewsArticleViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create News Article</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewsArticleId" class="control-label">ID</label>
                <input asp-for="NewsArticleId" class="form-control" />
                <span asp-validation-for="NewsArticleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsTitle" class="control-label">Title</label>
                <input asp-for="NewsTitle" class="form-control" />
                <span asp-validation-for="NewsTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Headline" class="control-label">Headline</label>
                <input asp-for="Headline" class="form-control" />
                <span asp-validation-for="Headline" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label">CreatedDate</label>
                <input asp-for="CreatedDate" class="form-control" type="datetime-local" readonly />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewsContent" class="control-label">Content</label>
                <input asp-for="NewsContent" class="form-control" />
                <span asp-validation-for="NewsContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsSource" class="control-label">Source</label>
                <input asp-for="NewsSource" class="form-control" />
                <span asp-validation-for="NewsSource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category Name</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Status</label>
                <div class="d-flex align-items-center">
                    <div class="form-check me-3">
                        <input type="radio" asp-for="NewsStatus" class="form-check-input" value="true" id="active" checked />
                        <label class="form-check-label" for="active">Active</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" asp-for="NewsStatus" class="form-check-input" value="false" id="inactive" />
                        <label class="form-check-label" for="inactive">Inactive</label>
                    </div>
                </div>
                <span asp-validation-for="NewsStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreatedById" class="control-label">CreatedById</label>
                <input asp-for="CreatedById" class="form-control" value="@Model.CreatedById" readonly />
                <span asp-validation-for="CreatedById" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedById" class="control-label">UpdatedById</label>
                <input asp-for="UpdatedById" class="form-control" value="@Model.CreatedById" readonly />
                <span asp-validation-for="UpdatedById" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModifiedDate" class="control-label">ModifiedDate</label>
                <input asp-for="ModifiedDate" class="form-control" type="datetime-local" readonly />
                <span asp-validation-for="ModifiedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
