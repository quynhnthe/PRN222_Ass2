@model List<NewsManagementSystem_Assigment01.Models.NewsArticle>

<h2>News Report Statistics</h2>

<form method="get">
    <label for="startDate">From:</label>
    <input type="date" id="startDate" name="startDate" value="@ViewBag.StartDate" required />

    <label for="endDate">To:</label>
    <input type="date" id="endDate" name="endDate" value="@ViewBag.EndDate" required />

    <button type="submit" class="btn btn-primary">Filter</button>
</form>

@if (Model.Count == 0)
{
    <p>No news found in this period.</p>
} else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Created Date</th>
                <th>Category</th>
                <th>Status</th>
                <th>Created By</th>
                <th>Last Modified By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var news in Model)
            {
                <tr>
                    <td>@news.NewsArticleId</td>
                    <td>@news.NewsTitle</td>
                    <td>@news.CreatedDate?.ToString("dd/MM/yyyy")</td>
                    <td>@news.Category?.CategoryName</td>
                    <td>@news.NewsStatus</td>
                    <td>@news.CreatedBy?.AccountName</td>
                    <td>@news.ModifiedDate?.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
